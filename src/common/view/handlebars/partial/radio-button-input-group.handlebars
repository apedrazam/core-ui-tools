{{#> input-group}}

<div class='btn-group__buttons'>
  {{#each buttons as |button|}}
    <div class='btn-group__button-container'>

      <input
            type='radio'
            id='{{button.id}}'
            value='{{button.id}}'
            {{#if ../value '==' button.id}}checked{{/if}}
            name='{{../attribute}}'>

      <label class='btn-group__button' for='{{button.id}}'>
        {{button.name}}
      </label>
    </div>
  {{/each}}
</div>

{{/input-group}}