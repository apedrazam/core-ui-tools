<div id="{{id}}" class='btn-group__buttons'>
  {{#each buttons as |button|}}
    <div class='btn-group__button-container'>
      <input
        type='radio'
        id='{{id}}_radio-button_{{button.id}}'
        value='{{button.id}}'
        {{#if button.selected}}checked{{/if}}
        name='{{../attribute}}'>
      <label class='btn-group__button' for='{{button.id}}_radio-button'>
        {{button.name}}
      </label>
    </div>
  {{/each}}
</div>